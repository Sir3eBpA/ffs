<UserControl x:Class="FFS.Views.DiscScan"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FFS.Views"
             xmlns:extensions="clr-namespace:AdonisUI.Extensions;assembly=AdonisUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <WrapPanel Margin="0 20 0 0" HorizontalAlignment="Center">
            <ItemsControl ItemsSource="{Binding Path=ScannableDrives}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" VerticalAlignment="Top"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="10 5">
                            <GroupBox Width="250"
                                      Height="80" 
                                      BorderBrush="Black"
                                      BorderThickness="3">

                                <StackPanel Orientation="Vertical">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                                        <CheckBox Content="{Binding DriveName, Mode=OneWay}" IsChecked="{Binding IsChecked}" Margin="0 0 40 0" />
                                        <Image Source="/Assets/Icons/drive_icon.png" Height="50" Width="50" VerticalAlignment="Center" HorizontalAlignment="Right"></Image>
                                    </StackPanel>

                                    <ProgressBar Height="20"
                                                 Maximum="100"
                                                 Foreground="ForestGreen"
                                                 extensions:ProgressBarExtension.IsProgressAnimationEnabled="False"
                                                 Value="{Binding TakenStoragePct, Mode=OneWay}"/>
                                </StackPanel>

                            </GroupBox>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </WrapPanel>
    </Grid>
</UserControl>
